@model LeBarbier.Models.User

@{
    ViewBag.Title = "Register";
}

<div class="container register-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h2>Benvenuto</h2>
                </div>
                <div class="card-body d-flex justify-content-center">
                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Nome" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Cognome" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control", placeholder = "Cellulare" })
                            @Html.ValidationMessageFor(m => m.PhoneNo)
                        </div>

                        <div class="form-group mb-3">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="form-group text-center mb-2">
                            <button type="submit" class="btn btn-primary text-center">Registrati</button>
                        </div>

                        <div class="form-group text-center fw-bold">
                            <p>Sei già registrato? @Html.ActionLink("Clicca qui", "Login", "Auth", new { area = "" }, new { @class = "" })</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .register-container {
        font-family: "Cormorant Garamond", serif;
    }
</style>